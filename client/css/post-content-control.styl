@import colors

.post-container
    .post-content.transparency-grid img
        background-image:
            linear-gradient(to right, $transparency-grid-square-color, $transparency-grid-square-color),
            linear-gradient(to right, black 50%, white 50%),
            linear-gradient(to bottom, black 50%, white 50%);
        background-size: 20px 20px;
        background-blend-mode: normal, difference, normal;

    text-align: center
    .post-content
        text-align: left
        margin: 0 auto
        position: relative

        .resize-listener
            position: absolute
            left: 0
            right: 0
            top: 0
            bottom: 0
            width: 100%
            height: 100%

        img
            image-orientation: from-image
